@using Cinema.Web.Models.CategoryFilm;
@model List<Film>
@{
    ViewData["Title"] = ViewBag.Title;
    //Layout = "~/Views/Shared/_ManagementLayout.cshtml";
    int CateId = ViewBag.CategoryId;
    CategoryFilm category = ViewBag.Category != null ? ViewBag.Category as CategoryFilm : new CategoryFilm();
}

<div class="card shadow mb-4">
    <div class="card-header row py-3">
        <input hidden value="@CateId" id="CategoryId" />
        <h4 id="filmclassification">
            <a href="/film/FilmNowShowing/@CateId" class="textcustomblue" id="filmnowshow">Phim đang chiếu</a>  /
            <a href="/Film/FilmScreened/@CateId" class="textcustomred" id="filmscreened">Phim đã chiếu</a>  /
            <a href="/Film/FilmUpComing/@CateId" class="textcustomblue" id="filmupcoming">Phim sắp chiếu</a>
        </h4>
    </div>
    <div class="card-body">
        <div class="row form-group" style="padding-left:10px">
            <div class="ml-auto" style="padding-right:30px">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Tên phim</th>
                        <th>Tiêu đề</th>
                        <th>Đánh giá</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (Film film in Model)
                        {
                            <tr>
                                <td>@film.FilmId</td>
                                <td><a href="/Film/FilmShow/@film.FilmId" class="item">@film.FilmName</a></td>
                                <td>@film.Title</td>
                                <td>@film.AverageRate</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/film.js" asp-append-version="true"></script>
}
