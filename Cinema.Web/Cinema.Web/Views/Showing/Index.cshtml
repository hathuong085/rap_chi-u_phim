@{
    ViewData["Title"] = ViewBag.Title;
    Layout = "~/Views/Shared/_ManagementLayout.cshtml";
    List<AllDesShowing> showings = ViewBag.Showings;
}
<div style="margin-top:-50px;margin-bottom:5px">
    <h4>
        Quản lý xuất chiếu   <a href="/Showing/AddShowingOfFilmNew" class="au-btn au-btn-icon au-btn--green au-btn--small">
            <i class="zmdi zmdi-plus"></i>Thêm xuất chiếu
        </a>
    </h4>
</div>
<div class="card shadow mb-4">
    <div class="card-header row py-3">
        <h4 id="showingclassification">
            <a href="/Showing/Index" class="textcustomred" id="screened">Đã chiếu</a>  /
            <a href="/Showing/Upcoming" class="" id="upcoming">Đang hoặc sắp chiếu</a>
        </h4>
    </div>
    <div class="card-body">
        <div class="row form-group" style="padding-left:10px">
            <div class="ml-auto" style="padding-right:30px">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Id xuất chiếu</th>
                        <th>Phòng chiếu</th>
                        <th>Phim chiếu</th>
                        <th>Thời gian chiếu</th>
                        <th>Ghế(Sử dụng/Tổng số)</th>
                        <th>Trạng thái</th>
                        <th>Doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    @if (showings != null)
                    {
                        foreach (AllDesShowing showing in showings)
                        {
                            if (showing.Status == 2)
                            {
                                <tr>
                                    <td>@showing.ShowingId</td>
                                    <td>@showing.RoomName</td>
                                    <td>@showing.FilmName</td>
                                    <td>@showing.StartTime @showing.Dayshow</td>
                                    <td>@showing.NumberChairOn/100 </td>
                                    <td>Đã chiếu</td>
                                    <td>@showing.Revenue()</td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/showing.js" asp-append-version="true"></script>
}