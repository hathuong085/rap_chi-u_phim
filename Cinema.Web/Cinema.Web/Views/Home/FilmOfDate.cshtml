
@{
    Layout = "~/Views/Shared/_Layoutdemo.cshtml";
}
<div class="slide-one-item home-slider owl-carousel">

    <div class="site-blocks-cover inner-page overlay" style="background-image: url(/images/liveshow/1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-6 text-center" data-aos="fade">
                    <h1 class="font-secondary  font-weight-bold text-uppercase"></h1>
                </div>
            </div>
        </div>
    </div>
    <div class="site-blocks-cover inner-page overlay" style="background-image: url(/images/liveshow/2.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 text-center" data-aos="fade">
                    <h1 class="font-secondary font-weight-bold text-uppercase"></h1>
                </div>
            </div>
        </div>
    </div>
    <div class="site-blocks-cover inner-page overlay" style="background-image: url(/images/liveshow/3.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7 text-center" data-aos="fade">
                    <h1 class="font-secondary font-weight-bold text-uppercase"></h1>
                </div>
            </div>
        </div>
    </div>
</div>
<section style="padding-top:40px;height:100%;
                        background-image:url(/images/starBK.jpg);background-size:100%;
                        background-size:cover;
                        background-position:center;
                        background-repeat:no-repeat;
                        ">

    <div id="homebody">
        <div class="container row m-auto">
            <div class="col-5 text-right">
                <h3 class="js__active">
                    <a href="#">LỊCH CHIẾU THEO PHIM</a>
                </h3>
            </div>
            <div class="col-2 text-center">
                <h2>|</h2>
            </div>
            <div class="col-5 text-left">
                <h3>
                    <a href="/Home/FilmOfDate">LỊCH CHIẾU THEO NGÀY</a>
                </h3>
            </div>
        </div>
        <div style="text-align:center;margin-top:20px">
            <span style="font-size:20px;color:white;margin-left:70px">Từ </span><input type="date" id="todate" style="width:220px;padding-left:20px;font-size:20px;border-radius:20px" />
            <span style="font-size:20px;color:white">  Đến </span><input type="date" id="fromdate" style="width:220px;padding-left:20px;font-size:20px;border-radius:20px" />
            <a href="javascript:;" onclick="film.searchbyday()" class="btn btn-primary" style="border-radius:20px;margin-top:-5px">Tìm kiếm</a>
            <div id="countfilm">

            </div>
        </div>
        <div style="margin-top:20px;padding:10px 20px" id="filmofdate">

        </div>
    </div>
</section>

<!-- Modal -->
<div id="bookfilm" class="modal fade" data-backdrop="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <form id="frmAddEditEmployee">
            <div class="modal-content">
                <div class="modal-header" style="background-color:lightgray">
                    <h3 class="modal-title" style="margin-right:100px;">Đặt vé</h3>
                    <h5 class="modal-title" style="margin-right:20px;color:greenyellow">1.Chọn ghế</h5>
                    <h5 class="modal-title" style="margin-right:20px" id="nextFood">2.Chọn đồ ăn</h5>
                    <h5 class="modal-title" style="margin-right:20px" id="nextXN">3.Xác nhận</h5>
                    <h5 class="modal-title" style="margin-right:20px" id="nextTT">4.Thanh toán</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <input hidden id="FilmId" name="FilmId">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-7 border-right row">
                            <div class="col-12 row" id="addbookbody">
                            </div>
                            <div class="modal-footer ml-auto" id="buttonNext"></div>
                        </div>
                        <div class="col-5" style="margin: 0px 15px;">
                            <h3 class="text-center">Thông tin đặt vé</h3>
                            <div class="row border-bottom" id="desShowing">
                                <div class="col-5" style="height:40px;">Phim:</div>
                                <div class="col-7" id="FilmNameBK"></div>
                                <div class="col-5" style="height:40px;">Xuất chiếu:</div>
                                <div class="col-7" id="timeshowoffilm"></div>
                                <div class="col-5" style="height:40px;">Phòng chiếu:</div>
                                <div class="col-7" id="roomname"></div>
                                <div class="col-5" style="height:40px;">Tên ghế:</div>
                                <div class="col-7" id="seatname"></div>
                                <div class="col-5" style="height:40px;">Giá vé:</div>
                                <div class="col-7" id="priceticket"></div>
                            </div>
                            <div class="row border-bottom" id="desBookTicket">

                            </div>
                            <div class="row border-bottom" id="desBookOrder">

                            </div>
                            <div class="row float-right" id="totalPrice">

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/filmofdate.js" asp-append-version="true"></script>
}