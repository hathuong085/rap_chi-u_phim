
@{
    Layout = "~/Views/Shared/_Layoutdemo.cshtml";
    List<Film> Films = ViewBag.films;
    List<EventDelete> banners = ViewBag.banners;
}
    <div id="homebody">
        <div class="slide-one-item home-slider owl-carousel">
            @if (banners != null)
            {
                foreach (EventDelete ev in banners)
                {
                    @if (ev.IsDeleted==false)
                    {
                        var @link = (ev.LinkEvent == "") ? "#" : ev.LinkEvent;
                        <a href=@link>
                            <div class="site-blocks-cover inner-page overlay" id="imgevent" style="background-image: url(@ev.ImageEvent);" data-aos="fade" data-stellar-background-ratio="0.5">
                                <div class="container">
                                    <div class="row align-items-center justify-content-center">
                                        <div class="col-md-6 text-center" data-aos="fade">
                                            <h1 class="font-secondary  font-weight-bold text-uppercase"></h1>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                     }
                }
            }

        </div>
        <section style="padding-top:40px;height:100%;
                        background-image:url(/images/starBK.jpg);background-size:100%;
                        background-size:cover;
                        background-position:center;
                        background-repeat:no-repeat;
                        ">

            <div class="container row m-auto">
                <div class="col-5 text-right">
                    <h3 class="js__active">
                        <a href="/Home/demo">LỊCH CHIẾU THEO PHIM</a>
                    </h3>
                </div>
                <div class="col-2 text-center">
                    <h2>|</h2>
                </div>
                <div class="col-5 text-left">
                    <h3>
                        <a href="/Home/FilmOfDate">LỊCH CHIẾU THEO NGÀY</a>
                    </h3>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 block-13 nav-direction-white">
                    <div class="nonloop-block-13 owl-carousel" id="bodyhome">
                        @*slide-1*@
                        @if (@Films != null)
                        {
                            foreach (Film film in Films)
                            {
                                <div class="media-image" style="justify-content: center;text-align:center">
                                    <a href="/Home/Film/@film.FilmId">
                                        <img src="@film.Image" alt="Image" class="img-fluid" style="width:100%;height:400px;padding:0px 15%">
                                        <div class="media-image-body" style="text-align:center">
                                            <h2 class="font-secondary text-uppercase">@film.FilmName</h2>                                           
                                            <button href="/Home/Film/@film.FilmId" type="button" id="buttonve" class="btn btn-primary"><i class="fa fa-ticket-alt" style="transform: rotate(135deg);"></i> MUA VÉ</button>
                                        </div>
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <h2 style="text-align:center;color:#007bff">PHIM HOT</h2>
            <div class="row" id="filmsbyrate" style="padding:5px 75px">
            </div>
        </section>
    </div>   

